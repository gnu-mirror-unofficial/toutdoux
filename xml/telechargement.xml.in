  <!-- APT -->
  <cadre _nom="APT">
    <commande-entete _texte="Ajouter la localisation des paquets toutdoux 'deb ftp://toutdoux.sourceforge.net/pub/toutdoux/debian/ ./' à la configuration de APT '/etc/apt/sources.list'"/>
    <commande commande="$ su" _texte="connexion en administrateur"/>
    <commande commande="# apt-get update"_texte="mise à jour de la base locale de APT"/>
    <commande commande="# apt-get install getxml" _texte="installation du paquet 'getxml'"/>
    <commande commande="# apt-get install dtags" _texte="installation du paquet 'dtags'"/>
    <commande commande="# exit" _texte="déconnexion de l'administrateur"/>
  </cadre>

  <!-- CVS -->
  <cadre nom="CVS">
    <texte _texte="L'arbre des fichiers source est hébergé sur le serveur CVS de SourceForge."/>
    <texte _texte="Pour le récupérer en anonyme (sans mot de passe):"/>
    <texte texte="$ mkdir ToutDoux"/>
    <texte texte="$ cd ToutDoux"/>
    <texte texte="$ cvs -d:pserver:anonymous@cvs.toutdoux.sourceforge.net:/cvsroot/toutdoux login"/>
    <texte texte="$ cvs -z3 -d:pserver:anonymous@cvs.toutdoux.sourceforge.net:/cvsroot/toutdoux co -P ."/>
    <texte texte="$ ./autogen.sh"/>
    <texte texte="$ make"/>
  </cadre>

