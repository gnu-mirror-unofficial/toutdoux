<!-- APT -->
  <cadre nom="APT">
    <commande-entete texte="Add the toutdoux packages location 'deb ftp://toutdoux.sourceforge.net/pub/toutdoux/debian/ ./' to APT configuration '/etc/apt/sources.list'"/>
    <commande commande="$ su" texte="superuser login"/>
    <commande commande="# apt-get update" texte="update the APT locale database"/>
    <commande commande="# apt-get install getxml" texte="'getxml' package installation"/>
    <commande commande="# apt-get install dtags" texte="'dtags' package installation"/>
    <commande commande="# exit" texte="superuser logout"/>
  </cadre>
<!-- CVS -->
  <cadre nom="CVS">
    <texte texte="The source code tree is hosted on the SourceForge CVS server."/>
    <texte texte="You can get it here (no password needed):"/>
    <texte texte="$ mkdir ToutDoux"/>
    <texte texte="$ cd ToutDoux"/>
    <texte texte="$ cvs -d:pserver:anonymous@cvs.toutdoux.sourceforge.net:/cvsroot/toutdoux login"/>
    <texte texte="$ cvs -z3 -d:pserver:anonymous@cvs.toutdoux.sourceforge.net:/cvsroot/toutdoux co -P ."/>
    <texte texte="$ ./autogen.sh"/>
    <texte texte="$ make"/>
  </cadre>
